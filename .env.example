# Immermatch Environment Variables
# Copy this file to .env and fill in your API keys

# Google AI Studio API Key (required)
# Get yours at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Supabase (required for production / daily digest)
# Get yours at: https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Resend (required for daily digest emails)
# Get yours at: https://resend.com/
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM=Immermatch <digest@yourdomain.com>

# App URL (required for email verification and unsubscribe links)
APP_URL=https://your-app.streamlit.app

# Impressum / Legal notice (required for daily digest emails in Germany, ยง 5 DDG)
IMPRESSUM_NAME=Your Full Name
IMPRESSUM_ADDRESS=Street 1, 12345 City, Country
IMPRESSUM_EMAIL=your@email.com

# Daily task configuration (optional, used by daily_task.py)
CV_PATH=cv.pdf
TARGET_LOCATION=
MIN_SCORE=70
